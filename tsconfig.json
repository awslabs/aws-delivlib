{
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "es2016",
            "es2017.object",
            "es2017.string"
        ],
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "strictPropertyInitialization": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "jsx.create"
    },
    "exclude": ["custom-resource-handlers"]
}
